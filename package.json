{
  "name": "document-generator",
  "private": true,
  "scripts": {
    "prepare": "husky install && node ./packages/eslint-typeinfo-rules-fetch-and-store.mjs",
    "mr:nuke": "pnpm --parallel run nuke && pnpm run mr:nuke:node-modules",
    "mr:nuke:build": "pnpm --parallel run nuke:build",
    "mr:nuke:node-modules": "pnpm --parallel exec rimraf node_modules && rimraf node_modules",
    "mr:lint": "pnpm --parallel run lint:package",
    "mr:lint:fix": "pnpm --parallel run lint:package:fix",
    "mr:format": "prettier --write --ignore-unknown .",
    "mr:build": "pnpm --recursive run build",
    "mr:dev:watch": "pnpm run --parallel dev:watch"
  },
  "devDependencies": {
    "@types/jsdom": "^20.0.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "pnpm": "^7.1.2"
  }
}
