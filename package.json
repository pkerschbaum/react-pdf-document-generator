{
  "name": "document-generator",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "render-web": "yarn workspace @document-generator/renderer-web start",
    "render-pdf": "yarn workspace @document-generator/renderer-pdf build-pdf-watch",
    "render-pdf-once": "yarn workspace @document-generator/renderer-pdf build-pdf",
    "format": "yarn run prettier --write ./**/*",
    "lint": "yarn workspaces run lint",
    "nuke": "yarn workspaces run rimraf node_modules && rimraf ./node_modules"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "^16.14.0",
    "npm": "^8.3.1",
    "yarn": "^1.22.10"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
