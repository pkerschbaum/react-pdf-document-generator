{
  "name": "document-generator",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "mr:nuke": "pnpm run mr:nuke:build && pnpm run mr:nuke:node-modules",
    "mr:nuke:build": "pnpm run --parallel nuke:build",
    "mr:nuke:node-modules": "pnpm run --parallel nuke:node-modules && rimraf node_modules",
    "mr:lint": "pnpm run --parallel lint",
    "mr:lint:fix": "pnpm run --parallel lint -- --fix",
    "mr:format": "prettier --write --ignore-unknown .",
    "render-web": "pnpm run --filter \"@document-generator/renderer-web\" start",
    "render-pdf": "pnpm run --filter \"@document-generator/renderer-pdf\" build-pdf-watch",
    "render-pdf-once": "pnpm run --filter \"@document-generator/renderer-pdf\" build-pdf"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "^16.14.0",
    "npm": "^8.3.1",
    "pnpm": "^6.32.3"
  }
}
