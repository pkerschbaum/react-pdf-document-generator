{
  "name": "document-generator",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "mr:nuke": "pnpm run mr:nuke:build && pnpm run mr:nuke:node-modules",
    "mr:nuke:build": "pnpm --parallel run nuke:build",
    "mr:nuke:node-modules": "pnpm --parallel exec rimraf node_modules && rimraf node_modules",
    "mr:lint": "pnpm --parallel run lint:package",
    "mr:lint:fix": "pnpm --parallel run lint:package:fix",
    "mr:format": "prettier --write --ignore-unknown .",
    "render-web": "pnpm run --filter \"@document-generator/renderer-web\" start",
    "render-pdf": "pnpm run --filter \"@document-generator/renderer-pdf\" build-pdf-watch",
    "render-pdf-once": "pnpm run --filter \"@document-generator/renderer-pdf\" build-pdf"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "^16.14.0",
    "pnpm": "^7.1.2"
  }
}
