{
  "name": "@document-generator/config",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "build": "pnpm run build:compile",
    "build:compile": "tsc -p ./tsconfig.project.json",
    "dev": "tsc -p ./tsconfig.project.json -w --preserveWatchOutput",
    "lint": "pnpm run lint:file .",
    "lint:file": "cross-env APPLY_HEAVY_RULES=true eslint --max-warnings 0",
    "lint:fix": "pnpm run lint --fix",
    "nuke": "pnpm run nuke:artifacts && del-cli --dot=true node_modules",
    "nuke:artifacts": "del-cli --dot=true dist \"*.tsbuildinfo\""
  },
  "devDependencies": {
    "@document-generator/config-eslint": "workspace:*",
    "@document-generator/config-typescript": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-regexp": "^2.1.1",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.4.6"
  }
}
