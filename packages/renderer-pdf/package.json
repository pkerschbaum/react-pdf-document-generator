{
  "name": "@document-generator/renderer-pdf",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "ts-patch install -s",
    "nuke": "pnpm run nuke:build && rimraf node_modules",
    "nuke:build": "rimraf dist *.tsbuildinfo",
    "build": "pnpm run build:compile && pnpm run build:pdf",
    "build:compile": "tsc -p ./tsconfig.project.json",
    "build:pdf": "node ./dist/index.js --paper-format=A4",
    "lint": "eslint --max-warnings 0",
    "lint:package": "pnpm run lint .",
    "lint:package:fix": "pnpm run lint:package --fix"
  },
  "dependencies": {
    "@types/node": "^16.11.7",
    "commander": "^9.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-regexp": "^1.9.0",
    "puppeteer": "^15.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "nodemon": "^2.0.19",
    "ts-patch": "^2.0.2",
    "typescript": "^4.8.3",
    "typescript-transform-paths": "^3.3.1"
  },
  "engines": {
    "node": "^16.14.0"
  }
}
