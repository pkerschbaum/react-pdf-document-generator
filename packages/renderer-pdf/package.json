{
  "name": "@document-generator/renderer-pdf",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "imports": {
    "#pkg/*": "./dist/*"
  },
  "scripts": {
    "lint": "cross-env APPLY_HEAVY_RULES=true eslint --max-warnings 0",
    "build:compile": "tsc -p ./tsconfig.project.json",
    "create:pdf": "node ./dist/index.js",
    "pkg:nuke": "pnpm run pkg:nuke:artifacts && rimraf node_modules",
    "pkg:nuke:artifacts": "rimraf dist *.tsbuildinfo",
    "pkg:lint": "pnpm run lint .",
    "pkg:lint:fix": "pnpm run pkg:lint --fix",
    "pkg:build": "pnpm run build:compile",
    "pkg:dev:watch": "tsc -p ./tsconfig.project.json -w --preserveWatchOutput"
  },
  "dependencies": {
    "@document-generator/config": "workspace:*",
    "puppeteer": "^20.5.0"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-regexp": "^1.15.0",
    "nodemon": "^2.0.22",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": "^18.12.1"
  }
}
